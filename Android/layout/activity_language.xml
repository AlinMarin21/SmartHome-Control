<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_background">

    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/purple_fade_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.044"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/title_textview"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:background="@color/purple_fade_background"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/settings_language_text"
            android:textColor="@color/black"
            android:textSize="32dp"
            android:layout_weight="0.8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.044"
            android:gravity="center_vertical"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="390dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">


            <LinearLayout
                android:id="@+id/en_lang_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="@color/purple_fade_background"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"
                android:paddingTop="15dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <ImageView
                    android:id="@+id/en_flag"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    app:srcCompat="@drawable/gb"
                    android:layout_weight="1.0"/>

                <TextView
                    android:id="@+id/en_lang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/en_lang_text"
                    android:textColor="@color/gray_navigation_background"
                    android:layout_weight="0.4"
                    android:paddingTop="5dp"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ro_lang_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="@color/purple_fade_background"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"
                android:paddingTop="15dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <ImageView
                    android:id="@+id/ro_flag"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    app:srcCompat="@drawable/ro"
                    android:layout_weight="1.0"/>

                <TextView
                    android:id="@+id/ro_lang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ro_lang_text"
                    android:textColor="@color/gray_navigation_background"
                    android:layout_weight="0.4"
                    android:paddingTop="5dp"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fr_lang_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="@color/purple_fade_background"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp" android:paddingTop="15dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <ImageView
                    android:id="@+id/fr_flag"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    app:srcCompat="@drawable/fr"
                    android:layout_weight="1.0"/>

                <TextView
                    android:id="@+id/fr_lang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/fr_lang_text"
                    android:textColor="@color/gray_navigation_background"
                    android:layout_weight="0.4"
                    android:paddingTop="5dp"
                    android:gravity="center"/></LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/it_lang_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="@color/purple_fade_background"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp" android:paddingTop="15dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <ImageView
                    android:id="@+id/it_flag"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    app:srcCompat="@drawable/it"
                    android:layout_weight="1.0"/>

                <TextView
                    android:id="@+id/it_lang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/it_lang_text"
                    android:textColor="@color/gray_navigation_background"
                    android:layout_weight="0.4"
                    android:paddingTop="5dp"
                    android:gravity="center"/></LinearLayout>
            <LinearLayout
                android:id="@+id/sp_lang_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="@color/purple_fade_background"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp" android:paddingTop="15dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <ImageView
                    android:id="@+id/sp_flag"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    app:srcCompat="@drawable/sp"
                    android:layout_weight="1.0"/>

                <TextView
                    android:id="@+id/sp_lang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sp_lang_text"
                    android:textColor="@color/gray_navigation_background"
                    android:layout_weight="0.4"
                    android:paddingTop="5dp"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ge_lang_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="@color/purple_fade_background"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp" android:paddingTop="15dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <ImageView
                    android:id="@+id/ge_flag"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    app:srcCompat="@drawable/ge"
                    android:layout_weight="1.0"/>

                <TextView
                    android:id="@+id/ge_lang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ge_lang_text"
                    android:textColor="@color/gray_navigation_background"
                    android:layout_weight="0.4"
                    android:paddingTop="5dp"
                    android:gravity="center"/>
            </LinearLayout>

        </LinearLayout>


 <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

     <LinearLayout
         android:id="@+id/ru_lang_button"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical"
         android:layout_weight="1"
         android:background="@color/purple_fade_background"
         android:layout_marginLeft="1dp"
         android:layout_marginRight="1dp"
         android:layout_marginBottom="1dp"
         android:layout_marginTop="1dp" android:paddingTop="15dp"
         android:paddingLeft="5dp"
         android:paddingRight="5dp">

         <ImageView
             android:id="@+id/ru_flag"
             android:layout_width="match_parent"
             android:layout_height="25dp"
             app:srcCompat="@drawable/ru"
             android:layout_weight="1.0"/>

         <TextView
             android:id="@+id/ru_lang"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="@string/ru_lang_text"
             android:textColor="@color/gray_navigation_background"
             android:layout_weight="0.4"
             android:paddingTop="5dp"
             android:gravity="center"/>
     </LinearLayout>

     <LinearLayout
         android:id="@+id/jp_lang_button"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical"
         android:layout_weight="1"
         android:background="@color/purple_fade_background"
         android:layout_marginLeft="1dp"
         android:layout_marginRight="1dp"
         android:layout_marginBottom="1dp"
         android:layout_marginTop="1dp" android:paddingTop="15dp"
         android:paddingLeft="5dp"
         android:paddingRight="5dp">

         <ImageView
             android:id="@+id/jp_flag"
             android:layout_width="match_parent"
             android:layout_height="25dp"
             app:srcCompat="@drawable/jp"
             android:layout_weight="1.0"/>

         <TextView
             android:id="@+id/jp_lang"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="@string/jp_lang_text"
             android:textColor="@color/gray_navigation_background"
             android:layout_weight="0.4"
             android:paddingTop="5dp"
             android:gravity="center"/>
     </LinearLayout>

     <LinearLayout
         android:id="@+id/cn_lang_button"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical"
         android:layout_weight="1"
         android:background="@color/purple_fade_background"
         android:layout_marginLeft="1dp"
         android:layout_marginRight="1dp"
         android:layout_marginBottom="1dp"
         android:layout_marginTop="1dp" android:paddingTop="15dp"
         android:paddingLeft="5dp"
         android:paddingRight="5dp">

         <ImageView
             android:id="@+id/cn_flag"
             android:layout_width="match_parent"
             android:layout_height="25dp"
             app:srcCompat="@drawable/cn"
             android:layout_weight="1.0"/>

         <TextView
             android:id="@+id/cn_lang"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="@string/cn_lang_text"
             android:textColor="@color/gray_navigation_background"
             android:layout_weight="0.4"
             android:paddingTop="5dp"
             android:gravity="center"/>
     </LinearLayout>
 </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>