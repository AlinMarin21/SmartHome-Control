<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_background">

    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/purple_fade_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.044"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/title_textview"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:background="@color/purple_fade_background"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/settings_custom_display_text"
            android:textColor="@color/black"
            android:textSize="32dp"
            android:layout_weight="0.8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.044"
            android:gravity="center_vertical"/>


    </LinearLayout>


    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/select_custom_display_text"
        android:textColor="@color/black"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.198" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.652">

        <Switch
            android:id="@+id/temp_inside_switch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="@string/temp_inside_only_text"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:thumbTint="@color/purple_navigation_background"
            android:trackTint="@color/gray_navigation_background" />

        <Switch
            android:id="@+id/temp_outside_switch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="@string/temp_outside_only_text"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:thumbTint="@color/purple_navigation_background"
            android:trackTint="@color/gray_navigation_background" />

        <Switch
            android:id="@+id/hum_inside_switch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="@string/hum_inside_only_text"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:thumbTint="@color/purple_navigation_background"
            android:trackTint="@color/gray_navigation_background" />

        <Switch
            android:id="@+id/hum_outside_switch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="@string/hum_outside_only_text"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:thumbTint="@color/purple_navigation_background"
            android:trackTint="@color/gray_navigation_background" />

        <Switch
            android:id="@+id/air_quality_switch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="@string/air_quality_text"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:thumbTint="@color/purple_navigation_background"
            android:trackTint="@color/gray_navigation_background" />

        <Switch
            android:id="@+id/gas_switch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="@string/gas_text"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:thumbTint="@color/purple_navigation_background"
            android:trackTint="@color/gray_navigation_background" />

        <Switch
            android:id="@+id/rainfall_switch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="@string/rainfall_text"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:thumbTint="@color/purple_navigation_background"
            android:trackTint="@color/gray_navigation_background" />

        <Switch
            android:id="@+id/brightness_switch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="@string/brightness_text"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:thumbTint="@color/purple_navigation_background"
            android:trackTint="@color/gray_navigation_background" />

        <Switch
            android:id="@+id/motion_switch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="@string/motion_text"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:thumbTint="@color/purple_navigation_background"
            android:trackTint="@color/gray_navigation_background" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>